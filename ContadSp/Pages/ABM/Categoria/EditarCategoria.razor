@page "/editar-categoria/{id}"
@using ContadSp.Modelos
@using ContadSp.Repositorios
@using System.Linq
@inject IRepositorio<Modelo_ABM_Categoria> repositorio
@inject NavigationManager NavigationManager

<h3>Editar Categoria</h3>

@if (categoria == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <EditForm Model="@categoria" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="categoria">Categoria:</label>
            <InputText id="categoria" class="form-control" @bind-Value="categoria.categoria" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </EditForm>
}

@code {
    [Parameter]
    public string Id { get; set; }

    private Modelo_ABM_Categoria categoria;

    protected override async Task OnInitializedAsync()
    {
        // categoria = await repositorioObtenerPorId(int.Parse(Id));
        categoria = await repositorio.Obtener(int.Parse(Id));
    }

    private async Task HandleValidSubmit()
    {
        await repositorio.Actualizar(categoria);
        NavigationManager.NavigateTo("/listacategorias");
    }
}
