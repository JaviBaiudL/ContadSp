@using Radzen.Blazor

<RadzenMenu class=" estilomenu">
    <ChildContent>
        <div style="display: flex; align-items: center;">
            <img src="./assets/images/logopodjud.png" Style="height: 30px; width: 30px; margin-right: 10px;" />
            <RadzenMenuItem Text="Inicio" Path="/" Icon="home"></RadzenMenuItem>

        </div>
        <RadzenMenuItem Text="ABM" Icon="description">
            <RadzenMenuItem Text="Categorías" Icon="account_circle">
                <RadzenMenuItem Text="Nueva Categoría" Path="altaCategoria" Icon="line_weight"></RadzenMenuItem>
                <RadzenMenuItem Text="Listado de Categorías" Path="listaCategorias" Icon="attach_file"></RadzenMenuItem>
            </RadzenMenuItem>


            <RadzenMenuItem Text="Articulos" Icon="chrome_reader_mode">
                <RadzenMenuItem Text="Alta de Artículos" Path="altaArticulo" Icon="add_circle"></RadzenMenuItem>
                <RadzenMenuItem Text="Listado de Articulos" Path="listaArticulos" Icon="list"></RadzenMenuItem>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Unidades de Medida" Icon="3d_rotation">
